---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Mikell Bobadilla, Desarrollador Backend especializado en Java y Spring Boot. Experto en APIs RESTful, bases de datos MySQL, PostgreSQL, y MongoDB. Desarrollo de aplicaciones robustas con Hibernate, JPA y mÃ¡s."
		/>
		<meta name="robots" content="index, follow" />
		<meta
			property="og:title"
			content="Mikell Bobadilla - Desarrollador Backend Java"
		/>
		<meta
			property="og:description"
			content="Desarrollador especializado en Java y Spring Boot. Experto en APIs RESTful, Hibernate, JPA y bases de datos relacionales y no relacionales."
		/>
		<meta property="og:image" content="/profile/mikell-photo.jpg" />
		<meta property="og:url" content="https://mikellbobadilla.com.ar" />
		<meta property="og:type" content="website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="author" content="Mikell Bobadilla" />
		<meta
			name="keywords"
			content="Desarrollador Java, Mikell, Mikell Bobadilla, Desarrollador Backend, Backend"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body
		class="bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
	>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: dark;
	}
	* {
		font-family: "Onest Variable", sans-serif;
		scroll-behavior: smooth;
	}
	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
