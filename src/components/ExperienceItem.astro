---
interface Props {
    title: string;
    description: string;
    date: string;
    link?: string;
}
const { title, description, date, link } = Astro.props;
---

<div
    class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-zinc-900 bg-zinc-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-indigo-200">
    {date}
</time>
<h3 class="text-lg font-semibold text-yellow-200 mt-2">
    {title}
</h3>
<p class="mb-4 text-base font-normal text-gray-400 text-pretty">
    {description}
</p>
