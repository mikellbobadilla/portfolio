---
import { TAGS } from "../utils/tags";

const {
    REACT,
    REACT_ROUTER,
    MATERIAL_UI,
    TYPESCRIPT,
    JAVA,
    POSTGRE_SQL,
    SPRING,
} = TAGS;

const PROJECTS = [
    {
        title: "React Movie",
        description:
            "Applicación que permite buscar peliculas y obtener sus detalles. Esta app se conecta a la API de OMDb mostrando resultados por su título.",
        link: "https://reactmovie-2gm.pages.dev/?s=Avengers",
        github: "https://github.com/mikellbobadilla/ReactMovie",
        poster: "",
        tags: [REACT, REACT_ROUTER, MATERIAL_UI, TYPESCRIPT],
    },
    {
        title: "Blogging Platform",
        description:
            "Desarrollo de una API RESTful para la gestión de blogs, implementada con las mejores prácticas actuales y estándares de la industria. La API permite crear, leer, actualizar y eliminar publicaciones, gestionando usuarios, comentarios y categorías, asegurando seguridad, escalabilidad y fácil mantenimiento.",
        link: "https://github.com/mikellbobadilla/Bloggin-Platform",
        github: "https://github.com/mikellbobadilla/Bloggin-Platform",
        poster: "",
        tags: [JAVA, SPRING, POSTGRE_SQL],
    },
];
---
{
    PROJECTS.map(({ title, description, tags, poster }) => (
        <article>
            <h3 class="text-2xl text-balance font-semibold text-yellow-200/80 mb-2">
                {title}
            </h3>
            <p class="text-md sm:text-lg text-pretty mb-4">{description}</p>
            <ul class="flex flex-wrap gap-2 flex-row mb-4">
                {tags.map((tag) => (
                    <span
                        class={`flex gap-x-1 rounded-full text-xs  ${tag.class} py-1 pl-2 pr-4`}
                    >
                        <tag.icon class="size-4" />
                        <li>{tag.name}</li>
                    </span>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/5"
                src={poster}
                alt={`Captura de pantalla del proyecto ${poster}`}
            />
        </article>
    ))
}
